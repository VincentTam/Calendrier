<Window x:Class="Calendrier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendrier"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgData" AutoGenerateColumns="True" ItemsSource="{Binding sessions}" Height="409" VerticalAlignment="Top" SelectionChanged="DataGrid_SelectionChanged" Margin="10,0"/>
    </Grid>
</Window>
